@model CBBW.Areas.Security.ViewModel.MGPInDetailsVM
@{
    ViewBag.Title = "Material Gate Pass (For Company Transport)–ENTRY";
    int sl = 1;
}



<div class="container">

    @using (Html.BeginForm("VehicleMaterialInDetails", "MaterialGatePass", FormMethod.Post))
