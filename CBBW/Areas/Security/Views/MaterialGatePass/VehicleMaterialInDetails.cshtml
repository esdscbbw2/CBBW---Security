        .inVisible {
            display: none;
        }

        .pointer {
            cursor: pointer;
        }
    </style>
}
@section scripts{

    <script src="js/moment.min.js"></script>
    <script src="js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/UIContent/JS/CustomePage/MGPInDetails.js"></script>
    <script>

        function buttondisable() {
            $("#savebtndisable").removeClass('is-valid').addClass('is-invalid');
        };

        $(document).ready(function () {
            var today = new Date();
            var minDate = today.setDate(today.getDate() + 1);
            var firstOpen = true;
            var time;

            $('.timePicker').datetimepicker({
                useCurrent: false,
                format: "hh:mm A"
            }).on('dp.show', function () {
                if (firstOpen) {
                    time = moment().startOf('day');
                    firstOpen = false;
                } else {
                    time = "01:00 PM"
                }

                $(this).data('DateTimePicker').date(time);
            });
        });

        function GetoutDetailsPage(ctrl) {
            //var targetid = $(ctrl).attr("id");
            //var targetval = $(ctrl).attr('data-value');
            var notenumber = $("#NoteNumber").val();
            var url = '/Security/MaterialGatePass/VehicleMaterialOutView?NoteNumber=' + notenumber +'&CBUID=2';
            window.location.href = url;
        };
    </script>

}

