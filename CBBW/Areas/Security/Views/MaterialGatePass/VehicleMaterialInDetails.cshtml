        @Html.HiddenFor(model => model.ActualKmIn);
        @Html.HiddenFor(model => model.KMRunInTrip);
        @Html.HiddenFor(model => model.InRemark);
        @Html.HiddenFor(model => model.ActualTime);
        <div class="row newTable">
            <input id="savebtndisables" type="hidden" class="form-control pointer is-invalid">
            <div class="fixedElement">
                <div class="col-md-12" style="position: relative;">
                    <div class="heading_text_btn mb-4 mt-4">
                        <div class="leftButton">
                            <button type="button" class="btn btn-primary me-2" onclick="buttondisable();window.location.href='@Url.Action("Create", "MaterialGatePass",
new { Area = "Security" })'">
                                <i data-feather="arrow-left-circle"></i>
                                Back
                            </button>

                            <button id="btnSubmit" type="button" name="Submit" value="Increate"
                                    class="btn btn-secondary me-2" disabled="disabled" onclick="SaveData()">
                                <i data-feather="upload"></i>
                                Save
                            </button>
                            <button type="button" class="btn btn-white" onclick="btnClearClicked()">
                                <i data-feather="x-circle"></i>
                                Clear
                            </button>

                        </div>
