@using CBBW.Areas.Security.ViewModel.ETSEdit;
@model ETSEditViewVM
@{
    ViewBag.Title = "Employees Travelling Schedule Details – EDIT";
}
<div class="row newTable">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.NoteNumber)
        @Html.HiddenFor(m => m.DeleteBtn)
        @Html.HiddenFor(m => m.CBUID)
        @Html.HiddenFor(m => m.NoteDetails.IsIndividualEdit)
        <div class="fixedElement">
            <div class="col-md-12">
                <div class="heading_text_btn mb-3 mt-4">
                    <div class="leftButton">
                        <button id="btnBack" type="button"
                                class="btn btn-primary me-2">
                            <i data-feather="arrow-left-circle"></i>
                            Back
                        </button>
                        @if (Model.DeleteBtn == 1)
                        {
                            <button type="submit" name="Submit" value="Delete"
                                    class="btn btn-primary me-2">
                                <i data-feather="trash-2"></i>
                                Delete
                            </button>
                        }
                    </div>
                    <h2>Employees Travelling  Schedule Details – EDIT  </h2>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="text-center pt-2 pb-2">
                <div class="upper-tab-buttons">
                    <button type="submit" name="Submit" value="TourRule"
                            class="btn btn-primary me-2">
                        To Check  “Tour Rules”   Click Here
                    </button>
                    <button type="submit" name="Submit" value="TADARule"
                            class="btn btn-primary ">
                        To Check “TA & DA Rules”   Click Here
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-12 mb-4">
            <div class="card mb-4 mt-4">
                <div class="card-body approvalForm">
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-md-4">
                            <input type="text" class="form-control" disabled value="@Model.NoteDetails.NoteNumber">
                        </div>
                        <div class="col-md-8">
                            <div id="NZB_staff">
                                <div class="row">
                                    <label class="col-form-label col-md-5">
                                        @Model.NoteDescription
                                    </label>
                                    <label class="col-form-label col-md-1">
                                        Date  :
                                    </label>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" value="@Model.NoteDetails.EntryDateDisplay" disabled>
                                    </div>
                                    <label class="col-form-label col-md-1">
                                        Time  :
                                    </label>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" value="@Model.NoteDetails.EntryTime" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <label class="col-form-label col-md-2">Center Code & Name : </label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" value="@Model.NoteDetails.CenterName" disabled>
                        </div>
                    </div>
                    <div id="by_HG_tour_purpose">
                        <div class="row d-flex align-items-center mb-4 mr-15">
                            <label class="col-form-label col-md-2">Tour “Purpose Of Allotment” : </label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" value="@Model.NoteDetails.POAText" disabled>
                            </div>
                        </div>
                        <div class="row d-flex align-items-center mb-4 mr-15">
                            <label class="col-form-label col-md-2">Is E.P Tour : </label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" value="@Model.NoteDetails.EPTourText" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-4 mb-4">
                <div class="card-body alert alert-danger approvalForm text-dark ">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-2 col-form-label">
                            <label>Approved :</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control" value="@Model.NoteDetails.IsApprovedDisplay" disabled="">
                        </div>
                        <div class="col-md-2 col-form-label">
                            <label>Date &amp; Time Of Approval :</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control" value="@Model.NoteDetails.AppDateTimeDisplay" disabled="">
                        </div>
                        <div class="col-md-2 col-form-label">
                            <label>Reason If Not Approved :</label>
                        </div>
                        <div class="col-md-2">
                            <textarea name="" id="" cols="10" rows="2" class="form-control" disabled>@Model.NoteDetails.NotAppReason</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4 mt-4">
                <div class="card-body approvalForm alert alert-danger text-dark">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-2 col-form-label">
                            <label>Ratified :</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control" value="@Model.NoteDetails.IsRatifiedDisplay" disabled="">
                        </div>
                        <div class="col-md-2 col-form-label">
                            <label>Date & Time Of  Ratification :</label>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control" value="@Model.NoteDetails.RetDateTimeDisplay" disabled="">
                        </div>
                        <div class="col-md-2 col-form-label">
                            <label>Reason If Not Ratified :</label>
                        </div>
                        <div class="col-md-2">
                            <textarea name="" id="" cols="10" rows="2" class="form-control" disabled>@Model.NoteDetails.RetReason</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="d-flex justify-content-center mt-4">
                    <button id="TEBtn" type="submit" name="Submit" value="TourEditBtn"
                            class="btn btn-primary me-2">
                        Tour EDIT Details
                    </button>
                    <button id="IEBtn" type="submit" name="Submit" value="IndividualEditBtn"
                            class="btn btn-primary me-2">
                        Individual EDIT Details
                    </button>
                </div>
            </div>
            <div class="bgColor mt-4 bg-transparent text-center">
                <ul style="list-style:none;">
                    <li style="font-size: 16px;">
                        The EDIT Is Done As Per Policy & As Required :
                        <input type="text" class="form-control width-85 pointer-none" value="Yes" disabled="">
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
@section headers
{

}
@section scripts{
    <script>
        $('#btnBack').click(function () {
            $.ajax({
                url: "/Security/ETSEdit/BackButtonClicked",
                success: function (result) { window.location.href = result; }
            });
        });

        var TEditBtn = $('#TEBtn');
        var IEditBtn = $('#IEBtn');
        var ind = $('#NoteDetails_IsIndividualEdit').val();
        if (ind == 1) {
            TEditBtn.attr('disabled', 'disabled');
            IEditBtn.removeAttr('disabled');
        }
        else {
            IEditBtn.attr('disabled', 'disabled');
            TEditBtn.removeAttr('disabled');
        }
    </script>
    <script>
        $(document).ready(function () {
            //var mymsg = '@ViewBag.ErrMsg';
            if ('@ViewBag.ErrMsg' != '') {
                Swal.fire({
                    title: 'Failed To Delete',
                    text: "@ViewBag.ErrMsg",
                    icon: 'error',
                    customClass: 'swal-wide',
                    buttons: {
                        //cancel: 'Cancel',
                        confirm: 'Ok'
                    },
                    //cancelButtonClass: 'btn-cancel',
                    confirmButtonColor: '#2527a2',
                });
            };
            if ('@ViewBag.Msg' != '') {
                Swal.fire({
                    title: 'Confirmation',
                    text: "@ViewBag.Msg",
                    icon: 'success',
                    customClass: 'swal-wide',
                    buttons: {
                        confirm: 'Ok'
                    },
                    confirmButtonColor: '#2527a2',
                }).then(callback);
                function callback(result) {
                    if (result.value) {
                        var url = "/Security/ETSEdit/Index";
                        window.location.href = url;
                    }
                }
            };
        });
    </script>
}