@using System.Globalization;
@using CBBW.BOL.BIL;
@model TADABillGeneration
@{

}
<div class="">
    @Html.HiddenFor(x => x.NoteNumber)
    @Html.HiddenFor(x => x.RefNoteNumber)
    @Html.HiddenFor(x => x.EmployeeNo)
    @Html.HiddenFor(x=>x.ETotalAmount)
    <div class="row newTable">
        <div class="fixedElement">
            <div class="col-md-12">
                <div class="heading_text_btn mb-3 mt-4">
                    <div class="leftButton">
                        <button type="button" class="btn btn-primary me-2" onclick="window.location.href='/Security/BIL/PaymentIndex';">
                            <i data-feather="arrow-left-circle"></i>
                            Back
                        </button>
                    </div>
                    <h2>TA & DA Bill – Payment Details </h2>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="text-center pt-2 pb-2">
                <div class="upper-tab-buttons text-center">
                    <button type="button" class="btn btn-primary me-2" onclick="window.open('/Security/TourRule/ViewRedirection?CBUID=1');">
                        To Check  “Tour Rules”   Click Here
                    </button>
                    <button type="button" class="btn btn-primary" onclick="window.open('/Security/TADARules/ViewRedirection?CBUID=1');">
                        To Check “TA & DA Rules”   Click Here
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-12 mb-4">
            <div class="col-md-12 mt-4 pt-3">
                <div class="table-responsive max-content btnalign">
                    <table class="table table-bordered w-100" id="table">
                        <thead>
                            <tr>
                                <th scope="col" style="vertical-align: middle;">Ref. Bill No. & Date   </th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Center Code & Name</th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Person Type</th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Employee No. & Name  </th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Designation Code & Name </th>
                                <!-- <th scope="col" style="text-align: center; vertical-align: middle;"> Ref. E.P Note No. & Date</th> -->
                                <th scope="col" style="text-align: center; vertical-align: middle;">Tour From Date & Time  </th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Tour To Date & Time  </th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">No. Of Days On Tour </th>
                                <th scope="col" style="text-align: center; vertical-align: middle;">Purpose Of Visit </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    @Model.NoteNumber - @Model.EntryDatestr
                                </th>
                                <td class="text-center">
                                    @Model.CenterCodeName
                                </td>
                                <td class="text-center">
                                    @Model.PersonTypetxt
                                </td>
                                <td class="text-center">
                                    @Model.EmployeeCodeName
                                </td>
                                <td class="text-center">
                                    @Model.DesigCodeName
                                </td>
                                <td class="text-center">
                                    @Model.TourFromDateNTime
                                </td>
                                <td class="text-center">
                                    @Model.TourToDateNTime
                                </td>
                                <td class="text-center">
                                    @Model.NoOfDays
                                </td>
                                <td class="text-center">
                                    <textarea name="" class="form-control pointer-default" cols="20" rows="2" data-toggle="tooltip" data-placement="bottom" title="" data-bs-original-title="Lorem ipsum dolor sit amet" readonly="">@Model.PurposeOfVisit</textarea>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-12">
                <div class="heading_text_btn2 d-block mt-4 pt-3">
                    <h2 class="text-left">Approved Expenses Detail:   </h2>
                </div>
            </div>
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive btnalign">
                            <table class="table table-bordered w-100" id="table">
                                <thead>
                                    <tr>
                                        <th scope="col" style="vertical-align: middle;">Subject </th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">Eligible Daily Allowance Amount   </th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">T.A Amount  </th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">Local Conveyance Amount </th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">Lodging Expenses Amount</th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">Total Expenses</th>
                                        <th scope="col" style="text-align: center; vertical-align: middle;">Reasons If Less Amount Approved</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            Claimed
                                        </th>
                                        <td class="text-center">
                                            @Model.EDAllowance
                                        </td>
                                        <td class="text-center">
                                            @Model.TAAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.LocalConveyance
                                        </td>
                                        <td class="text-center">
                                            @Model.Lodging
                                        </td>
                                        <td class="text-center">
                                            @Model.TotalExpenses
                                        </td>
                                        <td class="text-center">
                                            NA
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            Approved
                                        </th>
                                        <td class="text-center">
                                            @Model.AEDAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ATAAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ALocAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ALodAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ATotalAmount
                                        </td>
                                        <td class="text-center">
                                            <textarea name="" class="form-control pointer-default" cols="20" rows="2" data-toggle="tooltip" data-placement="bottom" title="" data-bs-original-title="Lorem ipsum dolor sit amet" readonly="">@Model.AReamrk</textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            EDIT By I.A
                                        </th>
                                        <td class="text-center">
                                            @Model.EEDAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ETAAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ELocAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ELodAmount
                                        </td>
                                        <td class="text-center">
                                            @Model.ETotalAmount
                                        </td>
                                        <td class="text-center">
                                            <textarea name="" class="form-control pointer-default" cols="20" rows="2" data-toggle="tooltip" data-placement="bottom" title="" data-bs-original-title="Lorem ipsum dolor sit amet" readonly="">@Model.EReamrk</textarea>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12">
                            <div class="d-flex justify-content-center mt-2">
                                <button type="button" id="TDBtn" class="btn btn-primary me-2" onclick="TDBtnClicked()">
                                    Travelling  Details
                                </button>
                                <button type="button" class="btn btn-primary me-2" onclick="TPDBtnClicked();">
                                    Deductions From DA Detail
                                </button>
                            </div>
                        </div>
                        <br />
                        <div class="table-responsive" id="DADection">
                            <table class="table table-bordered w-100 btnalign " id="">
                                <thead>
                                    <tr>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;">
                                            Department  Code & Name
                                        </th>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;" width="25%">
                                            Requisition No.  & Date
                                        </th>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;">
                                            Prepared By No. & Name
                                        </th>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;">
                                            Requisition Amount
                                        </th>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;">
                                            Amount Paid
                                        </th>
                                        <th scope="col" rowspan="2" style="text-align: center; vertical-align: middle;">Remarks  </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">
                                          @Model.DeptName
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex">
                                                @Model.RequisitionNo
                                                <div class="position-relative pointer w-50">
                                                    @Model.RequisitionDatestr
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                        @Model.PreparedEmpName
                                        </td>
                                        <td class="text-center">
                                            @Model.RequisitionAmt
                                        </td>
                                        <td class="text-center">
                                            @Model.ETotalAmount
                                        </td>
                                        <td>
                                            @Model.Remark
                                        </td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-4">
                <div class="bgColor mt-4 bg-transparent content border-green text-left">
                    <ul style="list-style:none;">
                        <li style="font-size: 16px;">
                            Verified & Checked All The System Generated Bills With Amounts, Found Accurate & As Required:
                            <input type="text" class="form-control content border-green width-85 pointer-none" value="Yes" disabled="">
                        </li>
                    </ul>
                </div>
            </div>



        </div>
    </div>
    <div class="modal modal-previous-details fade" id="TPDModal" tabindex="-1"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel">TA & DA Bill – Payment Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="TPDModalDiv">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal modal-previous-details fade" id="TDModal" tabindex="-1"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel">TA & DA Bill – Payment Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="TDModalDiv">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section headers
{
    <style>
        .inVisible {
            display: none;
        }

        .pointer {
            cursor: pointer;
        }

        .Active {
            background-color: #ddf1dc;
        }
    </style>
}
@section scripts{

    <script>

        $(document).ready(function () {
            $('#btnTourRule').click(function () {
                var url = "/Security/TourRule/ViewRedirection?CBUID=1";
                window.open(url);
            });
        });
        function TPDBtnClicked() {
           
            var notenumber = $('#NoteNumber').val();
            var EmployeeNo = $('#EmployeeNo').val();
            var NoteNumber = $('#RefNoteNumber').val();
            var ETotalAmount = $('#ETotalAmount').val();
            var status = 1;
            if (notenumber != '') {
                var iDiv = $('#TPDModalDiv');
                var modalDiv = $('#TPDModal');
                var dataSourceURL = '/BIL/VPytmDeductionsFromDA?EmployeeNo=' + EmployeeNo + '&RefNoteNumber=' + NoteNumber + '&NoteNumber=' + notenumber + '&ETotalAmount=' + ETotalAmount + '&status=' + status;
                $.ajax({
                    url: dataSourceURL,
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html',
                    success: function (result) {
                        iDiv.html(result);
                        modalDiv.modal('show');
                       
                    },
                    error: function (xhr, status) {

                    }
                })
            }
            else {
                Swal.fire({
                    title: 'Error',
                    text: 'Select A NoteNumber To Deductions From DA Detail.',
                    icon: 'error',
                    customClass: 'swal-wide',
                    buttons: {
                        confirm: 'Ok'
                    },
                    confirmButtonColor: '#2527a2',
                });
            }
        };
        function TDBtnClicked() {
            var notenumber = $('#NoteNumber').val();
            var EmployeeNo = $('#EmployeeNo').val();
            var NoteNumber = $('#RefNoteNumber').val();
           
            if (notenumber != '') {
                var iDiv = $('#TDModalDiv');
                var modalDiv = $('#TDModal');
                var dataSourceURL = '/BIL/PytmTravellingDetails?EmployeeNo=' + EmployeeNo + '&RefNoteNumber=' + NoteNumber + '&NoteNumber=' + notenumber;
                $.ajax({
                    url: dataSourceURL,
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html',
                    success: function (result) {
                       
                        iDiv.html(result);
                        modalDiv.modal('show');

                    },
                    error: function (xhr, status) {

                    }
                })
            }
            else {
                Swal.fire({
                    title: 'Error',
                    text: 'Select A NoteNumber To Deductions From DA Detail.',
                    icon: 'error',
                    customClass: 'swal-wide',
                    buttons: {
                        confirm: 'Ok'
                    },
                    confirmButtonColor: '#2527a2',
                });
            }
        };
    </script>
}