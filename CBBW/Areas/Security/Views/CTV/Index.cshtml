
@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="~/UIContent/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    <link href="~/UIContent/style.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/sweetalert2.min.css" rel="stylesheet" />

    <title>Charbhai Bidi Works - A Bidi Manufacturing Company</title>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="content-wrapper justify-content-center align-items-center position-relative">
            <div class="login-inner">
                <div class="row w-100">
                    <div class="col-md-3 mx-auto">
                        <div class="login-outer">
                            <img src="~/Images/charbhai-logo-center.jpg" alt="Charbhai Bidi Works - logo" class="img-fluid">

                            <form action="" class="pt-3">
                                <div class="input-container">
                                    <i class="fa fa-user icon"></i>
                                    <input class="input-field form-control" type="text" placeholder="Username" name="usrnm">
                                </div>
                                <div class="input-container">
                                    <i class="fa fa-lock icon"></i>
                                    <input type="password" class="input-field form-control" id="" placeholder="Password">
                                </div>

                                <div class="form-group">

                                </div>
                                <div class="mt-3">
                                    <button type="button" class="btn btn-primary w-100">
                                        Login
                                    </button>
                                </div>
                                <div class="forgetPWD">
                                    <a href="#" class="auth-link ">Forgot password?</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
                <div class="row w-100 mt-3">
                    <div class="col-md-8 mx-auto">
                        <div class="footer-bottom">
                            <p>
                                For Authorized Used Only Activities on this system are subject to being monitored or recorded for all users, authorized or unauthorized. Use of the system is considered consent to such monitoring. Any evidence of possible criminal
                                activity may be provided to law enforcement.
                            </p>
                            <p class="copyright-text">©2022 Inc. All rights reserved.</p>

                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


    <!-- Optional JavaScript; choose one of the two! -->
    <script src="~/UIContent/JS/jquery.min.js"></script>
    <script src="~/UIContent/JS/bootstrap.bundle.min.js"></script>
    <script src="~/UIContent/JS/feather.min.js"></script>
    <script src="~/UIContent/JS/popper.min.js"></script>
    <script src="~/UIContent/JS/jquery.dataTables.min.js"></script>
    <script src="~/UIContent/JS/dataTables.bootstrap5.min.js"></script>
    <script src="~/UIContent/JS/sweetalert2.all.min.js"></script>
    
</body>

</html>
