@model CBBW.BOL.CTV.UserInfo
@{
    Layout = null;
}
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="~/UIContent/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    <link href="~/UIContent/CSS/style.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/UIContent/CSS/sweetalert2.min.css" rel="stylesheet" />
    <title>Charbhai Bidi Works - A Bidi Manufacturing Company</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container-fluid p-0 login-bg-img">
            <div class="content-wrapper justify-content-center align-items-center position-relative bg-transparent overflow-auto">
                <div class="login-inner">
                    <div class="row w-100">
                        <div class="col-md-3 mx-auto">
                            <div class="login-outer">
                                <img src="~/img/charbhai-logo-center.jpg" alt="Charbhai Bidi Works - logo" class="img-fluid">

                                @*<form action="" class="pt-3">*@
                                <div class="input-container">
                                    <i class="fa fa-user icon"></i>
                                    @Html.TextBoxFor(m => m.UserName,
                       htmlAttributes: new
                       {
                           @class = "input-field form-control",
                           placeholder = "Username"
                       })

                                </div>
                                <div class="input-container">
                                    <i class="fa fa-lock icon"></i>
                                    <input type="password" class="input-field form-control" id="" placeholder="Password">
                                </div>

                                <div class="form-group">

                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary w-100">
                                        Login
                                    </button>
                                </div>
                                @*<div class="forgetPWD">
                                        <a href="#" class="auth-link ">Forgot password?</a>
                                    </div>*@
                                @*</form>*@

                            </div>
                        </div>
                    </div>
                    <div class="row w-100 mt-3">
                        <div class="col-md-8 mx-auto">
                            <div class="footer-bottom">
                                <p>
                                    For Authorized Used Only Activities on this system are subject to being monitored or recorded for all users, authorized or unauthorized. Use of the system is considered consent to such monitoring. Any evidence of possible criminal
                                    activity may be provided to law enforcement.
                                </p>
                                <p class="copyright-text border-grey">©2022 Inc. All rights reserved.</p>

                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    }
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/feather.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/jquery.dataTables.min.js"></script>
    <script src="js/dataTables.bootstrap5.min.js"></script>
    <!-- sweet alert -->
    <script src="js/sweetalert2.all.min.js"></script>
</body>

</html>